<odoo>
    <record id="res_config_settings_view_form_ai" model="ir.ui.view">
        <field name="name">res.config.settings.ai.assistant</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app string="AI Assistant" name="ai_assistant_settings" icon="/ai_odoo_data_assistant/static/description/ai.png">
                    <block title="Duplicate Checker" name="ai_duplicate_checker_block">
                        <setting id="ai_duplicate_checker_enabled" string="Enable AI Duplicate Checker">
                            <field name="ai_duplicate_checker_enabled"/>
                        </setting>
                    </block>

                    <block title="LLM Configuration" name="ai_llm_config_block">
                        <setting id="ai_api_key" string="API Key">
                            <field name="ai_api_key"/>
                        </setting>
                        <setting id="ai_model_name" string="Model Name">
                            <field name="ai_model_name"/>
                        </setting>
                        <setting id="ai_redundancy_level" string="Redundancy Analysis Level">
                            <field name="ai_redundancy_level"/>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>