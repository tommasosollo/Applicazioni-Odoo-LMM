<odoo>
    <record id="res_config_settings_view_form_ai" model="ir.ui.view">
        <field name="name">res.config.settings.ai.assistant</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app string="AI Assistant" name="ai_assistant_settings" icon="/ai_odoo_data_assistant/static/description/ai.png">
                    <block title="Duplicate Checker" name="ai_duplicate_checker_block">
                        <setting id="ai_duplicate_checker" string="Enable AI Duplicate Checker">
                            <field name="module_ai_duplicate_checker"/>
                        </setting>
                    </block>
                    <block title="NL Query Wizard" name="ai_nl_query_block">
                        <setting id="ai_nl_query" string="Enable AI NL Query">
                            <field name="module_ai_nl_query"/>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>
